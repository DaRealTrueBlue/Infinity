{
  "name": "infinity-browser",
  "version": "1.0.0",
  "description": "Infinity - A modern web browser built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "browser",
    "web browser",
    "infinity"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "rcedit": "^5.0.2"
  },
  "build": {
    "appId": "com.infinity.browser",
    "productName": "Infinity Browser",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icon.png"
    }
  }
}
